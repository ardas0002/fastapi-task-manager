					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Register returns 201', function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test('Response contains user data without password', function () {",
									"    var json = pm.response.json();",
