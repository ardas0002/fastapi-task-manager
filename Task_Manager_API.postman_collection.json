{
	"info": {
		"name": "Task Manager API",
		"description": "Kolekcja do testowania Task Manager API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000"
		}
	],
	"item": [
		{
			"name": "Health",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"url": "{{base_url}}/health"
					}
				},
				{
					"name": "Root",
					"request": {
						"method": "GET",
						"url": "{{base_url}}/"
					}
				}
			]
		},
		{
			"name": "Projects",
			"item": [
				{
					"name": "Create Project",
					"request": {
						"method": "POST",
						"url": "{{base_url}}/projects",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n\t\"name\": \"Mój pierwszy projekt\",\n\t\"description\": \"Projekt testowy do nauki FastAPI\"\n}"
						}
					}
				},
				{
					"name": "Create Project (minimal)",
					"request": {
						"method": "POST",
						"url": "{{base_url}}/projects",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n\t\"name\": \"Projekt bez opisu\"\n}"
						}
					}
				},
				{
					"name": "Get All Projects",
					"request": {
						"method": "GET",
						"url": "{{base_url}}/projects"
					}
				},
				{
					"name": "Get Projects (with filters)",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{base_url}}/projects?search=pierwszy&skip=0&limit=5",
							"host": ["{{base_url}}"],
							"path": ["projects"],
							"query": [
								{ "key": "search", "value": "pierwszy" },
								{ "key": "skip", "value": "0" },
								{ "key": "limit", "value": "5" }
							]
						}
					}
				},
				{
					"name": "Get Project by ID",
					"request": {
						"method": "GET",
						"url": "{{base_url}}/projects/1"
					}
				},
				{
					"name": "Update Project",
					"request": {
						"method": "PUT",
						"url": "{{base_url}}/projects/1",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n\t\"name\": \"Zaktualizowany projekt\",\n\t\"description\": \"Nowy opis projektu\"\n}"
						}
					}
				},
				{
					"name": "Get Project Tasks",
					"request": {
						"method": "GET",
						"url": "{{base_url}}/projects/1/tasks"
					}
				},
				{
					"name": "Get Project Tasks (completed only)",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{base_url}}/projects/1/tasks?completed=true",
							"host": ["{{base_url}}"],
							"path": ["projects", "1", "tasks"],
							"query": [
								{ "key": "completed", "value": "true" }
							]
						}
					}
				},
				{
					"name": "Delete Project",
					"request": {
						"method": "DELETE",
						"url": "{{base_url}}/projects/1"
					}
				},
				{
					"name": "Get Project 404",
					"request": {
						"method": "GET",
						"url": "{{base_url}}/projects/9999"
					}
				}
			]
		},
		{
			"name": "Tasks",
			"item": [
				{
					"name": "Create Task",
					"request": {
						"method": "POST",
						"url": "{{base_url}}/tasks",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n\t\"title\": \"Zjeść obiad\",\n\t\"description\": \"Ugotować i zjeść obiad\",\n\t\"completed\": false\n}"
						}
					}
				},
				{
					"name": "Create Task (with project)",
					"request": {
						"method": "POST",
						"url": "{{base_url}}/tasks",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n\t\"title\": \"Task przypisany do projektu\",\n\t\"project_id\": 1\n}"
						}
					}
				},
				{
					"name": "Create Task (minimal)",
					"request": {
						"method": "POST",
						"url": "{{base_url}}/tasks",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n\t\"title\": \"Drugi task\"\n}"
						}
					}
				},
				{
					"name": "Get All Tasks",
					"request": {
						"method": "GET",
						"url": "{{base_url}}/tasks"
					}
				},
				{
					"name": "Get Tasks (with filters)",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{base_url}}/tasks?completed=false&search=obiad&skip=0&limit=5",
							"host": ["{{base_url}}"],
							"path": ["tasks"],
							"query": [
								{ "key": "completed", "value": "false" },
								{ "key": "search", "value": "obiad" },
								{ "key": "skip", "value": "0" },
								{ "key": "limit", "value": "5" }
							]
						}
					}
				},
				{
					"name": "Get Task by ID",
					"request": {
						"method": "GET",
						"url": "{{base_url}}/tasks/1"
					}
				},
				{
					"name": "Update Task",
					"request": {
						"method": "PUT",
						"url": "{{base_url}}/tasks/1",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n\t\"title\": \"Zaktualizowany task\",\n\t\"completed\": true\n}"
						}
					}
				},
				{
					"name": "Delete Task",
					"request": {
						"method": "DELETE",
						"url": "{{base_url}}/tasks/1"
					}
				},
				{
					"name": "Get Task 404",
					"request": {
						"method": "GET",
						"url": "{{base_url}}/tasks/9999"
					}
				}
			]
		}
	]
}
